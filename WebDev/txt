/* Container styling */
.poster-wrapper {
  display: flex; /* Arrange items in a row */
  justify-content: space-between; /* Add space between posters */
  align-items: center; /* Center posters vertically */
  gap: 10px; /* Space between posters */
  padding: 20px;
  background-color: #f8f9fa; /* Optional background color */
}

/* Individual poster styling */
.movie-poster {
  width: 200px; /* Fixed width for posters */
  height: 300px; /* Fixed height for posters */
  background-size: cover; /* Ensure the background image covers the div */
  background-position: center; /* Center the background image */
  filter: blur(5px); /* Apply blur effect to the background */
  border-radius: 10px; /* Rounded corners */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  position: relative; /* Ensure the background stays inside the div */
}

/* Hover effect for posters */
.movie-poster:hover {
  transform: translateY(-5px); /* Lift effect */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Stronger shadow on hover */
  filter: none; /* Remove blur on hover for a clearer image */
}

/* Optional: Add text or overlay to display over the blurred image */
.movie-poster::after {
  content: "Movie Title"; /* Example text */
  position: absolute;
  bottom: 10px;
  left: 10px;
  color: white;
  font-size: 18px;
  background-color: rgba(0, 0, 0, 0.5); /* Optional background for text */
  padding: 5px;
  border-radius: 5px;
}

/* Responsive behavior */
@media (max-width: 768px) {
  .poster-wrapper {
    flex-wrap: wrap; /* Stack posters vertically on small screens */
    justify-content: center; /* Center posters */
  }

  .movie-poster {
    width: 150px; /* Adjust size for smaller screens */
    height: 225px;
  }
}
